
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Admin/Content/IstPlay/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />

<section ng-controller="ModuleCtrl">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Modules
                </h2>

                <ul class="header-dropdown m-r--5 ">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div ng-show="flgMessage" id="message" class="alert alert-dismissible">
                    <button type="button" class="close" ng-click="hideMessage()" aria-hidden="true">&times;</button>
                    <h4><i id="icon" class="icon fa "></i> Alert!</h4>
                    {{message}}
                </div>
                <div class="table-responsive" ng-show="flgTable ">
                    <button type="button" class="btn btn-primary waves-effect" ng-click="addModule()" style="margin-bottom:10px"><i class="glyphicon glyphicon-plus"></i>Add a Module</button>
                    <table id="moduleTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Module Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in lstModule">
                                <td>{{item.ModuleName}}</td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-circle" ng-click="editModule(item)" title="" data-toggle="tooltip" data-placement="top" data-original-title="Edit Module">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-circle" ng-click="deleteModule(item)" title="" data-toggle="tooltip" data-placement="top" data-original-title="Delete Module">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

                <div class="box box-primary" ng-show="!flgTable">
                    <div class="box-header with-border">
                        <h3 class="box-title">Module Add/Update</h3>
                    </div>

                    <form role="form" id="form1" name="form1" novalidate ng-submit="formSubmit()">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Parent Page</label>
                                        <select name="ParentModuleId" ng-model="model.ParentModuleID">
                                            <option value="0">Select Module</option>
                                            <option ng-repeat="item in lstModuleDropdown" value="{{item.id}}">{{item.FullName}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="Display Order">Display Order</label>
                                        <input type="number" ng-model="model.DisplayOrder" id="DisplayOrder" placeholder="Display Order">
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" required ng-model="model.ModuleName" id="ModuleName" placeholder="ModuleName">
                                    </div>
                                    <div class="form-group">
                                        <label for="PageIcon">Page Icon</label>  <a href="/Admin/Icon/Index" target="_blank">Icon List</a>
                                        <input type="text" class="form-control" required ng-model="model.PageIcon" id="PageIcon" placeholder="PageIcon">
                                    </div>

                                    <div class="form-group">
                                        <label for="Page Url">Page Url</label>(/Sample)
                                        <input type="text" class="form-control" required ng-model="model.PageUrl" id="PageUrl" placeholder="Page Url">
                                    </div>
                                </div>
                            </div>



                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="button" ng-disabled="!form1.$valid" ng-click="createModule(model)" class="btn btn-primary">Submit</button>
                            <button type="button" ng-click="reset()" class="btn btn-default">Cancel</button>
                        </div>
                    </form>
                    <!-- /.box -->

                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Areas/Admin/Content/IstPlay/js/jqueryRequired.min.js"></script>
<script src="~/Areas/Admin/Content/IstPlay/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Areas/Admin/Content/IstPlay/plugins/datatables/dataTables.bootstrap.min.js"></script>

